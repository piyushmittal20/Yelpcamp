<%- include("../partials/header.ejs") %>
    <div class="container">
        <h1 style="text-align: center; margin-top: 10px;">Edit
            <%= campground.name %>
        </h1>
        <div style="width: 30%; margin: 40px auto; border-radius: 2px;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campground.name %> ">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= campground.price  %> " min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campground.description %> ">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block"> Submit</button>
                </div>

            </form>
            <p>
                <a class="btn btn-success btn-block" href="/campgrounds" role="button"><i class="fa fa-chevron-circle-left"></i>  Go Back</a>
            </p>
        </div>



    </div>
    <%- include("../partials/footer.ejs") %>