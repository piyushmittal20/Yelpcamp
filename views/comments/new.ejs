<%- include("../partials/header.ejs") %>
    <div class="container">
        <h1 style="text-align: center; margin-top: 10px;">Add New Comment to
            <%= campground.name %>
        </h1>
        <div style="width: 30%; margin: 40px auto; border-radius: 2px;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea rows="6" cols="60" class="form-control" type="text" name="comment[text]" placeholder="Write something here..."></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary ">Add Comment</button>
                </div>

            </form>
