<%- include("../partials/header.ejs") %>
    <div class="container">
        <h1 style="text-align: center; margin-top: 10px;">Edit Comment
        </h1>
        <div style="width: 30%; margin: 40px auto; border-radius: 2px;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %> ">
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block"> Submit</button>
                </div>

            </form>
            <p>
                <a class="btn btn-success btn-block" href="/campgrounds/<%= campground_id %> " role="button"><i class="fa fa-chevron-circle-left"></i>  Go Back</a>
            </p>
        </div>



    </div>
    <%- include("../partials/footer.ejs") %>